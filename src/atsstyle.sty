    filecolor=cyan,
    urlcolor=cyan, 
}
\newcommand{\selflink}[1]{\href{#1}{\color{RoyalBlue} #1}}
\newcommand{\link}[2]{\href{#1}{\color{RoyalBlue} #2}}

% Stop hyphenation
\usepackage[none]{hyphenat}

% Allow padding modifications to itemize environments
\usepackage{enumitem}
% docs: https://mirrors.mit.edu/CTAN/macros/latex/contrib/enumitem/enumitem.pdf
% modifications done inline

% Remove page numbers
\thispagestyle{empty}

% Remove paragraph indentation
\parindent=0pt

% Format for a period of time
\newcommand{\timeperiod}[2] {#1 \--- #2}

% Definition for box widths
\newcommand{\smallwidth} {11em}
\newcommand{\midwidth}   {14em}
\newcommand{\bigwidth}   {35em}

% Definitions for horizonal alignment
\newcommand{\leftalignment} {\hspace{5em}}
\newcommand{\leftspace}     {\hspace{4em}}
\newcommand{\middlespace}   {\hspace{2.8em}}

% Definitions for vertical spacing
\newcommand{\smallvspace}  {\vspace{1em}}
\newcommand{\smallervspace}  {\vspace{.3em}}
\newcommand{\headervspace} {\vspace{1em}}

% Special title block
\newcommand{\bigtitle}[2] {
    \begin{center}
        \parbox{15em}{\raggedleft{\LARGE\textbf{#1}}}
        \hspace{5em}
        \parbox{15em}{#2}
    \end{center}
    \smallvspace
}

% Large section header
\newcommand{\header}[1] {
    \textbf{\Large #1}
	\headervspace
}

% Entry
\newcommand{\entry}[4] {
    \textbf{#1} \hspace{0.5cm} {#2} \hfill \textit{#3} \\
    #4
    \smallvspace
}

% Entry with bullets
\newcommand{\bulletentry}[4] {
    \textbf{#1} \hspace{0.5cm} {#2} \hfill \textit{#3}
    \begin{itemize}[nosep,topsep=0.2em,left=0mm]
        \sloppy
        #4
    \end{itemize}
    \smallvspace
}

% Entry with less stuff
\newcommand{\simpleentry}[2] {
    \textbf{#1} \newline
    \leftspace
    \parbox{\smallwidth}{\raggedleft{\textbf{#1}}}
	\middlespace
    \parbox{\bigwidth}{#2}
    \smallvspace
}

% Entry with less stuff but bulleted
\newcommand{\bulletsimpleentry}[2] {
    \textbf{#1}
    \begin{itemize}[nosep,topsep=0.2em,left=0mm]\raggedright #2 \end{itemize}
    \smallvspace
}

% Entry for two columns of skills
\newcommand{\skillentry}[2] {
    \parbox[b]{0cm}{\textbf{#1}}
    \hspace{2cm}
    #2
    \smallervspace
}

% Entry for publications, talks, posters, etc
\newcommand{\workentry}[4] {
    \leftspace
    \parbox{\smallwidth}{\raggedleft\textit{#4 #2}}
    \middlespace
    \parbox{\bigwidth}{``#1'' \\ #3}
    \smallvspace
}

% Award, one liner
\newcommand{\award}[2] {
    \leftspace
    \parbox{\smallwidth}{\raggedleft\textit{#1}}
    \middlespace
    \parbox{\bigwidth}{#2}
    \smallervspace
}

\newcommand{\publication}[4] {
    \leftspace
    \parbox{\smallwidth}{\raggedleft\textit{#1}}
    \middlespace
    \parbox{\bigwidth}{\link{#3}{``#2''} \\ #4}
    \smallvspace
}
